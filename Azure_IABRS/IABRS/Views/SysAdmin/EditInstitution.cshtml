@model IABRS.ViewModels.EditInstitutionViewModel
@{
    ViewBag.Title = "Edit Institution";
}

<h1>Institution User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Domian" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Domian" class="form-control">
            <span asp-validation-for="Domian" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Institution Courses</h3>
        </div>
        <div class="card-body">
            @if (Model.Courses.Any())
            {
                foreach (var course in Model.Courses)
                {
                    <h5 class="card-title">@course</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
       
    </div>


</form>